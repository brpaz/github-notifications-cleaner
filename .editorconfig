; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{json}]
indent_size = 2
indent_style = space

[*.md]
indent_size = 4
trim_trailing_whitespace = false
eclint_indent_style = unset

[Dockerfile]
indent_size = 4
